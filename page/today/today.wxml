<import src="../component/own/email_digest/email_digest.wxml" />
<view class='today-container'>
  <view class="headimg">
    <image src="http://qiniu.andylistudio.com/myapp/personal.png" model="center" binderror="headimgError" />
    <text class="username">andyliwr</text>
  </view>
  <view class="more-info">
    <view class="info-time">
      <text class="time">
        <text class="num">2</text>
        <text class="danwei">小时</text>
      </text>
      <text class="des">有效阅读时长</text>
    </view>
    <view class="info-day">
      <text class="day">
        <text class="num">12</text>
        <text class="danwei">天</text>
      </text>
      <text class="des">坚持阅读天数</text>
    </view>
    <view class="info-book">
      <text class="book">
        <text class="num">17</text>
        <text class="danwei">本</text>
      </text>
      <text class="des">已阅读的书籍</text>
    </view>
  </view>
  <view class="email">
    <view class="title">
      <text>
        <text class="text-underline">所有</text>邮件</text>
      <icon class="email-icon">
        <icon class="num-bg"></icon>
        <text class="num-value">12</text>
      </icon>
    </view>

    <!--滑块-->
    <swiper class="swipe" duration="600" bindchange="changeEmail">
      <block wx:for="{{emails}}">
        <swiper-item class="{{item.index == currentEmail? 'active': ''}}">
          <view>
            <view class="author">
              <image src="{{item.digest.author_img}}"></image>
              <view>
                <text class="name">{{item.digest.author_name}}</text>
                <br />
                <text class="des">{{item.digest.author_des}}</text>
              </view>
            </view>
            <view class="title">{{item.digest.title}}</view>
            <view class="content">
              <button wx:if="{{item.digest.content.button}}" bindtap="{{item.digest.content.button.eventHandler}}" data-gotoUrl="{{item.digest.content.button.url}}">{{item.digest.content.button.text}}</button>
              <text class="other">{{item.digest.content.other}}</text>
            </view>
          </view>
          <image src="{{item.bgImgUrl}}" class="slide-image" width="100%" height="100%" />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <!-- 出错打印 -->
  <import src="../component/own/err_tips/err_tips.wxml" />
  <template is="err_tips" data="{{err_tips_data}}" />

  <!-- 成功的提示 -->
  <import src="../component/own/toast/toast.wxml" />
  <template is="toast" data="{{toast_data}}" />
</view>