/**app.wxss**/
/** 导入weui **/
@import "weui.min.css";
html{
  font-family: "黑体"
}
page{
  height: 100%;
  overflow-y: hidden;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
} 
/* userInfo的相关样式 */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/* 顶部工具栏的样式 */
.top-toolbar{
  width: 100%;
  height: 30px;
  background-color: #444;
  color: #09BB07;
  font-weight: bold;
}
.top-toolbar .main{
  width: 100%;
  float: left;
}
.top-toolbar .main .inner{
  padding-right: 30px;
  padding-left: 40px;
  text-align: center;
}
.top-toolbar .main .inner .text-header{
  transform: translateX(-3px);
}
.top-toolbar .left{
  width: 30px;
  float: left;
  margin-left: -100%;
  text-align: center;
}
.top-toolbar .left icon{
  height: 30px;
  font-size: 18px;
  color: #09BB07;
}
.top-toolbar .right{
  width: 40px;
  float: left;
  margin-left: -40px;
}
